{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules"
  ],
  "verbose": true,
  "execMap": {
    "js": "node --harmony"
  },
  "events": {
    "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
  },
  "watch": [
    "uploads/",
    "config/",
    "api/",
    "./"
  ],
  "env": {
    "NODE_ENV": "development",
    "JWT_KEY": "secret"
  },
  "ext": "js,json"
}
